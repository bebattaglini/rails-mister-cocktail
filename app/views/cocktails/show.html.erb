<!-- show.html.erb -->
<%= @cocktail.name %>
<%= @cocktail.description %>
<img src="<%=@cocktail.url%>" >
<% @cocktail.doses.each do |dose| %>
<%= dose.description %>
<%= dose.ingredient.name %>
<%= link_to "delete", dose_path(dose),  method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to list", cocktails_path(@cocktail) %>
